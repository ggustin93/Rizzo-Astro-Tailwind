---
import logoImage from '../assets/images/logo_crizzo_calli3.svg';
import { Image } from 'astro:assets';

export interface Props {
  currentLang: string;
}

import LanguagePicker from '../components/LanguagePicker.astro';

export async function getStaticPaths() {
  return ['fr', 'en', 'it'].map(lang => ({ params: { lang } }));
}

const { currentLang } = Astro.props as Props;

const translations = {
  fr: {
    expertise: "EXPERTISE",
    profil: "PROFIL",
    ressources: "RESSOURCES",
    honoraires: "HONORAIRES",
    contact: "ME CONTACTER"
  },
  en: {
    expertise: "EXPERTISE",
    profil: "PROFILE",
    ressources: "RESOURCES",
    honoraires: "FEES",
    contact: "CONTACT ME"
  },
  it: {
    expertise: "COMPETENZA",
    profil: "PROFILO",
    ressources: "RISORSE",
    honoraires: "ONORARI",
    contact: "CONTATTAMI"
  }
};

const t = translations[currentLang as keyof typeof translations] || translations.fr;

const isHomePage = Astro.url.pathname === `/${currentLang}` || Astro.url.pathname === `/${currentLang}/`;

const leftNavLinks = [
  { href: isHomePage ? "#expertise" : `/${currentLang}#expertise`, label: t.expertise },
  { href: isHomePage ? "#profil" : `/${currentLang}#profil`, label: t.profil },
  { href: `/${currentLang}/blog`, label: t.ressources },
];

const rightNavLinks = [
  { href: isHomePage ? "#honoraires" : `/${currentLang}#honoraires`, label: t.honoraires },
];
---

<header class="bg-beige py-2 my-4 lg:py-3">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center">
      <!-- Menu hamburger for mobile and tablet -->
      <button id="menu-toggle" class="lg:hidden text-black z-20" aria-label="Toggle menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      
      <!-- Logo (visible on all screens) -->
      <div class="logo text-center flex-grow lg:flex-grow-0 lg:absolute lg:left-1/2 lg:transform lg:-translate-x-1/2">
        <a href={`/${currentLang}`}>
          <Image src={logoImage} alt="Christine Rizzo Logo" class="h-20 sm:h-24 md:h-28 lg:h-32 w-auto mx-auto" />
        </a>
      </div>
      
      <!-- Left navigation for desktop -->
      <nav class="hidden lg:flex space-x-8 items-center">
        {leftNavLinks.map(link => (
          <a href={link.href} class="text-black uppercase text-sm font-light hover:underline">{link.label}</a>
        ))}
      </nav>
      
      <!-- Right navigation for desktop -->
      <div class="hidden lg:flex items-center space-x-6">
        {rightNavLinks.map(link => (
          <a href={link.href} class="text-black uppercase text-sm font-light hover:underline">{link.label}</a>
        ))}
        <a href={`/${currentLang}/contact`} class="bg-transparent text-black border border-black px-3 py-1 rounded-sm hover:bg-black hover:text-white transition duration-300 uppercase text-sm font-light">{t.contact}</a>
        
        <LanguagePicker currentLang={currentLang} />
      </div>
    </div>
    
    <!-- Mobile and tablet menu -->
    <nav id="mobile-menu" class="lg:hidden fixed inset-0 bg-beige bg-opacity-95 z-10 flex flex-col justify-center items-center hidden">
      <button id="close-menu" class="absolute top-4 right-4 text-black z-20" aria-label="Close menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      {[...leftNavLinks, ...rightNavLinks].map(link => (
        <a 
          href={link.href.startsWith('#') ? link.href : `/${currentLang}${link.href.replace(`/${currentLang}`, '')}`} 
          class="block py-2 text-black uppercase text-lg font-light hover:underline"
        >
          {link.label}
        </a>
      ))}
      <a href={`/${currentLang}/contact`} class="mt-4 bg-transparent text-black border border-black px-4 py-2 rounded-sm hover:bg-black hover:text-white transition duration-300 uppercase text-lg font-light">{t.contact}</a>
      <div class="mt-4 py-4">
        <LanguagePicker currentLang={currentLang} />
      </div>
    </nav>
  </div>
</header>

<script is:inline>
  const menuToggle = document.getElementById('menu-toggle');
  const closeMenu = document.getElementById('close-menu');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      document.body.classList.toggle('overflow-hidden');
    });
  }

  if (closeMenu && mobileMenu) {
    closeMenu.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      document.body.classList.toggle('overflow-hidden');
    });
  }

  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(function(anchor) {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      var href = this.getAttribute('href');
      if (href && href.startsWith('#')) {
        var target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth'
          });
        }
      }
    });
  });
</script>
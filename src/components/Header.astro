---
const navLinks = [
  { href: "#expertise", label: "Expertise" },
  { href: "#profil", label: "Profil" },
  { href: "#honoraires", label: "Honoraires" },
  { href: "#articles", label: "Articles" },
];
---

<header class="flex flex-col md:flex-row justify-between items-center py-6">
  <nav class="flex flex-wrap justify-center space-x-2 md:space-x-4 order-2 md:order-1">
    {navLinks.map(link => (
      <a href={link.href} class="text-dark-green hover:text-accent mb-2 md:mb-0">{link.label}</a>
    ))}
  </nav>
  <div class="logo mb-4 md:mb-0 order-1 md:order-2 w-full md:w-auto text-center md:mx-4">C.R.</div>
  <nav class="flex flex-wrap justify-center space-x-2 md:space-x-4 order-3 md:order-3">
    <a href="#contact" class="bg-white text-dark-green border border-dark-green px-4 py-2 rounded-full hover:bg-dark-green hover:text-white mb-2 md:mb-0">Me contacter</a>
    <select class="text-dark-green hover:text-accent">
      <option value="fr">FR</option>
      <option value="en">EN</option>
      <option value="it">IT</option>
    </select>
  </nav>
</header>
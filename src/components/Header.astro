---
// Import de l'image depuis le dossier assets
import logoImage from '../assets/images/logo_crizzo_calli3.svg';
import { Image } from 'astro:assets';

export interface Props {
  currentLang: string;
}

import LanguagePicker from '../components/LanguagePicker.astro';

export async function getStaticPaths() {
  return ['fr', 'en', 'it'].map(lang => ({ params: { lang } }));
}

const { currentLang } = Astro.props as Props;

const translations = {
  fr: {
    expertise: "EXPERTISE",
    profil: "PROFIL",
    ressources: "RESSOURCES",
    honoraires: "HONORAIRES",
    contact: "ME CONTACTER"
  },
  en: {
    expertise: "EXPERTISE",
    profil: "PROFILE",
    ressources: "RESOURCES",
    honoraires: "FEES",
    contact: "CONTACT ME"
  },
  it: {
    expertise: "COMPETENZA",
    profil: "PROFILO",
    ressources: "RISORSE",
    honoraires: "ONORARI",
    contact: "CONTATTAMI"
  }
};

const t = translations[currentLang as keyof typeof translations] || translations.fr;

const isHomePage = Astro.url.pathname === `/${currentLang}` || Astro.url.pathname === `/${currentLang}/`;

const leftNavLinks = [
  { href: isHomePage ? "#expertise" : `/${currentLang}#expertise`, label: t.expertise },
  { href: isHomePage ? "#profil" : `/${currentLang}#profil`, label: t.profil },
  { href: `/${currentLang}/blog`, label: t.ressources },
];

const rightNavLinks = [
  { href: isHomePage ? "#honoraires" : `/${currentLang}#honoraires`, label: t.honoraires },
];
---

<header class="bg-beige py-4 my-8 lg:py-4">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center">
      <!-- Menu hamburger pour mobile et tablette -->
      <button id="menu-toggle" class="lg:hidden text-black z-20">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      
      <!-- Logo (visible sur tous les écrans) -->
      <div class="logo text-center flex-grow lg:flex-grow-0 lg:absolute lg:left-1/2 lg:transform lg:-translate-x-1/2">
        <a href={`/${currentLang}`}>
          <Image src={logoImage} alt="Christine Rizzo Logo" class="h-16 sm:h-20 md:h-24 lg:h-28 w-auto mx-auto" />
        </a>
      </div>
      
      <!-- Navigation gauche pour desktop -->
      <nav class="hidden lg:flex space-x-8 items-center">
        {leftNavLinks.map(link => (
          <a href={link.href} class="text-black uppercase text-sm font-light hover:underline">{link.label}</a>
        ))}
      </nav>
      
      <!-- Navigation droite pour desktop -->
      <div class="hidden lg:flex items-center space-x-6">
        {rightNavLinks.map(link => (
          <a href={link.href} class="text-black uppercase text-sm font-light hover:underline">{link.label}</a>
        ))}
        <a href={`/${currentLang}/contact`} class="bg-transparent text-black border border-black px-3 py-1 rounded-sm hover:bg-black hover:text-white transition duration-300 uppercase text-sm font-light">{t.contact}</a>
        
        <LanguagePicker currentLang={currentLang} />
      </div>
    </div>
    
    <!-- Menu mobile et tablette -->
    <nav id="mobile-menu" class="lg:hidden fixed inset-0 bg-beige bg-opacity-95 z-10 flex flex-col justify-center items-center hidden">
      {[...leftNavLinks, ...rightNavLinks].map(link => (
        <a href={link.href} class="block py-2 text-black uppercase text-lg font-light hover:underline">{link.label}</a>
      ))}
      <a href={`/${currentLang}/contact`} class="mt-4 bg-transparent text-black border border-black px-4 py-2 rounded-sm hover:bg-black hover:text-white transition duration-300 uppercase text-lg font-light">{t.contact}</a>
      <LanguagePicker currentLang={currentLang} />
    </nav>
  </div>
</header>

<script is:inline>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      document.body.classList.toggle('overflow-hidden');
    });
  }

  // Ajout d'un gestionnaire pour le défilement fluide
  document.querySelectorAll('a[href^="#"]').forEach(function(anchor) {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      var href = this.getAttribute('href');
      if (href && href.startsWith('#')) {
        var target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth'
          });
        }
      }
    });
  });
</script>
---
const { article } = Astro.props;
---

<div class="bg-white rounded-sm overflow-hidden shadow-lg transition duration-300 hover:shadow-xl">
  <img src={article.data.image} alt={article.data.title} class="w-full h-48 object-cover">
  <div class="p-6">
    <h3 class="text-xl font-light mb-2 text-black">{article.data.title}</h3>
    <p class="text-dark-gray mb-4 font-light leading-relaxed">{article.data.description}</p>
    <a href={`/articles/${article.slug}`} class="inline-block bg-transparent text-black uppercase text-sm font-light">
      <span class="border-b border-black pb-1">LIRE LA SUITE</span> â†’
    </a>
  </div>
</div>
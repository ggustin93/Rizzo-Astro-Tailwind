---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Briefcase, Shield, FileText, UserPlus, Search, ArrowLeft } from 'astro-feather-icons2';

export async function getStaticPaths() {
  return ['fr', 'en', 'it'].map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params;

const services = [
  {
    title: "Audit - Rapport Due Diligence",
    icon: FileText,
    pricing: "FORFAIT sur demande",
    details: [
      "en fonction du nombre de collaborateurs",
      "(tva 21%)"
    ],
    services: [
      "Analyse du dossier",
      "Q&A",
      "Rédaction du rapport",
      "Synthèse red flags"
    ]
  },
  {
    title: "Contrat de travail",
    icon: FileText,
    pricing: "FORFAIT 800 € htva",
    details: [
      "(tva 21%)"
    ],
    services: []
  },
  {
    title: "Règlement de travail",
    icon: Shield,
    pricing: "FORFAIT 1500 € htva",
    details: [
      "(tva 21%)"
    ],
    services: []
  },
  {
    title: "Licenciement",
    icon: Briefcase,
    pricing: "FORFAIT 725 € htva",
    details: [
      "Motif grave 1000 € htva",
      "(tva 21%)"
    ],
    services: [
      "Analyse des pièces",
      "Calcul de l'ICP",
      "Estimation du coût employeur",
      "Calcul des risques financiers en cas de contentieux",
      "Rédaction des courriers",
      "Vérification des documents de sortie"
    ]
  },
  {
    title: "Licenciement: négociation - contentieux",
    icon: Briefcase,
    description: "Négociation amiable et/ou procédure pour motif grave, licenciement abusif, discriminatoire, manifestement déraisonnable",
    pricing: "6000 € htva",
    details: [
      "mini = 4000 € htva",
      "maxi = 8000 € htva",
      "(tva 21%)"
    ],
    services: [
      "Analyse du dossier",
      "Calcul des indemnités",
      "Négociation d'un accord (coaching si négociation par vous en direct)",
      "Rédaction ou revue de la transaction",
      "Rédaction des conclusions",
      "Plaidoiries",
      "Vérification des documents de sortie",
      "Suivi de l'exécution",
      "Relations avec l'avocat adverse et la juridiction"
    ]
  },
  {
    title: "Conseils",
    icon: FileText,
    pricing: "Tarif horaire: 175 € htva",
    details: [
      "Forfait/abonnement sur demande",
      "(TVA à 21%)"
    ],
    services: [
      "Télétravail",
      "Droit à la déconnexion",
      "Temps de travail flexible",
      "Crédit-temps et congés thématiques et protections contre le licenciement",
      "Droit à la formation",
      "Reconnaissance et incentives bonus",
      "Gestion des absences (de longue durée)",
      "Discrimination",
      "Examen du statut salarié/indépendant"
    ]
  },
  {
    title: "Policy",
    icon: Shield,
    pricing: "FORFAIT à partir de 800 € htva",
    details: [
      "(tva 21%)"
    ],
    services: [
      "Remboursement de frais",
      "Télétravail",
      "Car policy",
      "..."
    ]
  },
  {
    title: ["Plainte pour harcèlement au travail", "Inspection", "Accident du travail"],
    icon: Shield,
    pricing: "FORFAIT Sur demande",
    details: [
      "(TVA à 21%)"
    ],
    services: []
  }
];
---

<BaseLayout 
  title="Services et Tarifs Employeurs - Christine Rizzo"
  description="Informations sur les services et tarifs pour employeurs de Christine Rizzo"
  lang={lang}>
  <main class="container mx-auto px-4 py-12">
    <a href={`/${lang}/honoraires`} class="inline-flex items-center text-employeur hover:underline mb-6">
      <ArrowLeft class="w-4 h-4 mr-2" />
      Retour aux honoraires
    </a>
    <h1 class="text-4xl font-light mb-12 text-center text-black">Services et tarifs pour employeurs</h1>
    
    {services.map((service) => (
      <div class="mb-12 rounded-lg overflow-hidden shadow-lg flex flex-col md:flex-row">
        <div class="md:w-1/2 p-6 bg-employeur text-white">
          <div class="flex items-start mb-4">
            <service.icon class="w-8 h-8 mr-4 mt-1 flex-shrink-0" />
            <h2 class="text-2xl font-semibold">{Array.isArray(service.title) ? service.title.join(', ') : service.title}</h2>
          </div>
          {service.description && <p class="mb-4 opacity-90">{service.description}</p>}
          <p class="font-medium text-accent mb-4">{service.pricing}</p>
          {service.details && (
            <ul class="list-disc list-inside mb-4 opacity-90">
              {service.details.map((detail) => (
                <li>{detail}</li>
              ))}
            </ul>
          )}
        </div>
        <div class="md:w-1/2 p-6 bg-white">
          {service.services.length > 0 ? (
            <div>
              <h3 class="font-medium mb-4 text-black">Services inclus :</h3>
              <ul class="space-y-2">
                {service.services.map((item) => (
                  <li class="flex items-start">
                    <span class="text-travailleur mr-3 text-xl">•</span>
                    <span class="text-dark-gray">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ) : (
            <p class="text-dark-gray">Services inclus : sur demande, adaptés à votre situation spécifique.</p>
          )}
        </div>
      </div>
    ))}
    
    <p class="mt-12 text-center text-dark-gray">
      Pour plus d'informations sur nos tarifs ou pour obtenir un devis personnalisé, n'hésitez pas à nous contacter.
    </p>

    <div class="mt-8 text-center">
      <a href={`/${lang}/contact`} class="inline-block bg-transparent text-dark-gray border border-dark-gray px-4 md:px-6 py-2 md:py-3 rounded-sm hover:bg-gray-700 hover:text-white transition duration-300 uppercase text-sm font-light">
        Nous contacter
      </a>
    </div>
  </main>
</BaseLayout>

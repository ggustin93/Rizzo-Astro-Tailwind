---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { Home } from 'astro-feather-icons2';
import illustration404 from '../assets/images/404_illustration.svg';

const { lang = 'fr' } = Astro.params;

const translations = {
  fr: {
    title: "Page non trouvée",
    message: "Oups ! La page que vous recherchez semble avoir disparu ou n'existe pas.",
    button: "RETOUR À L'ACCUEIL"
  },
  en: {
    title: "Page not found",
    message: "Oops! The page you're looking for seems to have vanished or doesn't exist.",
    button: "BACK TO HOME"
  },
  it: {
    title: "Pagina non trovata",
    message: "Ops! La pagina che stai cercando sembra essere scomparsa o non esiste.",
    button: "TORNA ALLA HOME"
  }
};

const t = translations[lang as keyof typeof translations] || translations.fr;
---

<BaseLayout title={t.title} description={t.message} lang={lang}>
  <main class="flex items-center justify-center bg-gradient-to-b bg-employeur my-16 mb-16">
    <div class="w-full px-4 sm:px-8 md:px-12 lg:px-16 py-8 md:py-12">
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-col md:flex-row items-center justify-between">
          <div class="w-full md:w-1/2 text-center md:text-left mb-8 md:mb-0">
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-light mb-4 text-white">{t.title}</h1>
            <p class="text-lg md:text-xl lg:text-2xl mb-8 text-white font-light leading-relaxed">
              {t.message}
            </p>
            <a 
              href={`/${lang || 'fr'}`} 
              class="inline-flex items-center bg-transparent text-white border border-white px-4 md:px-6 py-2 md:py-3 rounded-sm hover:bg-travailleur hover:border-travailleur transition duration-300 uppercase text-sm md:text-base font-light group"
            >
              <Home class="w-5 h-5 mr-2 group-hover:text-white transition-colors duration-300" />
              {t.button}
            </a>
          </div>
          <div class="w-full md:w-1/2 flex justify-center md:justify-end">
            <Image 
              src={illustration404} 
              alt="Illustration 404"
              width={400}
              height={300}
              class="w-full max-w-sm md:max-w-md"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
